# Include external dependencies
[include]
  path = ~/.gituser # User configuration file (name, email, etc...)

[alias]
  ; fast access

  a = add
  aa = add -A
  ai = add --interactive
  ap = add --patch

  br = branch
  bra = branch -a
  brd = branch -d
  brr = branch -r

  ci = commit
  cia = commit --amend
  ciam = commit --amend -m
  cim = commit -m

  cl = clone
  clr = clone --recursive

  co = checkout
  cob = checkout -b

  df = diff
  dfc = diff --cached

  fe = fetch

  l = log
  l1 = log -1
  ln = log -n

  me = merge

  pl = pull
  plo = pull origin

  ps = push
  pso = push origin

  rb = rebase

  re = remote -v

  rs = reset
  rsh = reset --hard

  rv = revert

  sw = show

  sh = stash
  sha = stash apply
  shc = stash clear
  shl = stash list

  st = status
  sts = status -s

  ; usefull aliases

  gitconfig = "!cat ~/.gitconfig"
  alias = "!git config -l | grep alias | cut -c 7- | sort"
  who = shortlog -sne

  totrash = clean -ndx
  trash = clean -fdx

  forget = update-index --assume-unchanged
  unforget = update-index --no-assume-unchanged

  ls = log --pretty=oneline --decorate --abbrev-commit
  tree = log --pretty=oneline --decorate --graph

  grep = grep -Ii
  find = "!git ls-files | grep -i"

[core]
  excludesfile = ~/.cvsignore
  pager = less

[man]
  viewer = less

[apply]
  whitespace = nowarn

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  pager = true

[mergetool]
  keepbackup = false
  keeptemporaries = false

[branch]
  autosetuprebase = always

[help]
  autocorrect = 10

[advice]
  statusHints = false
