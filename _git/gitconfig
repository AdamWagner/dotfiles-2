[user]
  name = Aymeric Beaumet
  email = aymeric@beaumet.fr

[alias]
  ; fast access
  br = branch
  ci = commit
  co = checkout
  df = diff
  fe = fetch
  pl = pull
  ps = push
  rb = rebase
  rs = reset
  rv = revert
  sh = stash
  st = status
  ; usefull aliases
  amend = commit --amend
  oneline = log --pretty=oneline --abbrev-commit --graph
  who = shortlog -sne
  rubbish = clean -ndx
  trash = clean -fdx
  ignore = update-index --assume-unchanged
  track = update-index --no-assume-unchanged
  gitconfig = !cat ~/.gitconfig

[core]
  editor = vim
  pager = less
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[apply]
  whitespace = fix

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[mergetool]
  keepbackup = true
  keeptemporaries = true

[man]
  viewer = less

[branch]
  autosetuprebase = always
