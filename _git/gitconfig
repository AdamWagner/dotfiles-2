# Include external dependencies
[include]
  path = ~/.gituser # User configuration file (name, email, etc...)

[alias]
  ; fast access
  a = add
  aa = add -A
  br = branch
  bra = branch -a
  brd = branch -d
  brr = branch -r
  ci = commit
  cia = commit --amend
  ciam = commit --amend -m
  cim = commit -m
  co = checkout
  cob = checkout -b
  df = diff
  dfc = diff --cached
  fe = fetch
  l = log
  l1 = log -1
  ln = log -n
  me = merge
  pl = pull
  plo = pull origin
  ps = push
  pso = push origin
  rb = rebase
  rs = reset
  rv = revert
  sh = show
  st = stash
  stc = stash clear
  stl = stash list
  st = status
  ; usefull aliases
  oneline = log --pretty=oneline --abbrev-commit
  tree = log --pretty=oneline --graph --decorate
  who = shortlog -sne
  rubbish = clean -ndx
  trash = clean -fdx
  ignore = update-index --assume-unchanged
  track = update-index --no-assume-unchanged
  gitconfig = !cat ~/.gitconfig

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.cvsignore
  pager = less -FRX

[man]
  viewer = less -FRX

[apply]
  whitespace = fix

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  pager = true

[mergetool]
  keepbackup = false
  keeptemporaries = false

[branch]
  autosetuprebase = always

[help]
  autocorrect = 10
