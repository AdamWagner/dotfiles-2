# Include external dependencies
[include]
  path = ~/.gituser # User configuration file (name, email, etc...)

[alias]
  ; fast access
  br = branch
  ci = commit
  cia = commit --amend
  cim = commit -m
  co = checkout
  cob = checkout -b
  df = diff
  dfc = diff --cached
  fe = fetch
  l = log
  me = merge
  pl = pull
  ps = push
  rb = rebase
  rs = reset
  rv = revert
  sh = stash
  shl = stash list
  st = status
  ; usefull aliases
  last = log -1
  oneline = log --pretty=oneline --abbrev-commit
  tree = log --pretty=oneline --graph --decorate
  who = shortlog -sne
  rubbish = clean -ndx
  trash = clean -fdx
  ignore = update-index --assume-unchanged
  track = update-index --no-assume-unchanged
  gitconfig = !cat ~/.gitconfig

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.cvsignore
  pager = less -FRX

[man]
  viewer = less -FRX

[apply]
  whitespace = fix

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
  pager = true

[mergetool]
  keepbackup = false
  keeptemporaries = false

[branch]
  autosetuprebase = always

[help]
  autocorrect = 10
