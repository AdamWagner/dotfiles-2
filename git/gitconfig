; `man git-config` could help you

[advice]
  statusHints = false

[alias]
  ; fast access aliases
  a = add
  br = branch
  ci = commit
  cia = commit --amend
  co = checkout
  df = diff
  dfc = diff --cached
  fe = fetch
  feo = fetch origin
  l = log
  me = merge
  pl = pull
  ps = push
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  re = remote
  rmc = rm --cached
  rs = reset
  rsh = reset --hard
  rv = revert
  sh = stash
  sha = stash apply
  shc = stash clear
  shd = stash drop
  shl = stash list
  shp = stash pop
  shs = stash save
  st = status
  sw = show

  ; Show git configuration
  gitconfig = "!cat ~/.gitconfig"

  ; Show git aliases
  alias = "!git config -l | grep alias | cut -c 7- | sort"

  ; Print the file to trash / trash them
  totrash = clean -ndx
  trash = clean -ffdx

  ; Find a file in the project
  find = "!git ls-files | grep -i"

  ; Print a tree of the project
  tree = log --graph --abbrev-commit --decorate --date=relative --all \
    --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) \
    %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

  ; Print all the committers for the project
  who = shortlog -sne

  ; Ignore modifications on some specified files
  unwatch = update-index --assume-unchanged
  watch = update-index --no-assume-unchanged

[branch]
  autosetuprebase = always
  autosetupmerge = true

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showbranch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less
  whitespace = space-before-tab,trailing-space

[diff]
  tool = vimdiff
  mnemonicprefix = true
  renames = copies

[grep]
  lineNumber = true
  patternType = extended

[man]
  viewer = less

[mergetool]
  keepbackup = false
  keeptemporaries = false
  prompt = false

[push]
  default = current

[rebase]
  stat = true

[rerere]
  enabled = true

[status]
  showUntrackedFiles = all

[user]
  name = Aymeric Beaumet
  email = aymeric@beaumet.me
  editor = vim
