; `man git-config` is your friend

[advice]
  detachedHead = false
  resolveConflict = false
  statusHints = false

[alias]
  ; fast access aliases
  a = add
  br = branch
  cf = cat-file
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  cp = cherry-pick
  df = diff
  dfc = diff --cached
  fe = fetch
  feo = fetch origin
  l = log
  me = merge
  pl = pull
  plo = pull origin
  ps = push
  pso = push origin
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  re = remote
  rmc = rm --cached
  rs = reset
  rss = reset --soft
  rsh = reset --hard
  rv = revert
  sm = submodule
  sma = submodule add
  smf = submodule foreach
  sh = stash
  sha = stash apply
  shc = stash clear
  shl = stash list
  shp = stash pop
  shs = stash save
  shsk = stash save --keep-index
  st = status
  sw = show
  t = tag
  uia = update-index --assume-unchanged
  uin = update-index --no-assume-unchanged

  ; usefull aliases
  gitconfig = "!cat ~/.gitconfig"
  alias = "!git config -l | grep alias | cut -c 7- | sort"
  totrash = clean -ndx
  trash = clean -ffdx
  find = "!git ls-files | grep -i"
  tree = log --graph --abbrev-commit --decorate --date=relative --all \
    --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) \
    %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  who = shortlog -sne

[apply]
  whitespace = fix

[branch]
  autosetuprebase = always

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showbranch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less
  whitespace = trailing-space

[diff]
  tool = vimdiff

[grep]
  lineNumber = true
  patternType = extended

[man]
  viewer = less

[mergetool]
  keepbackup = false
  keeptemporaries = false
  prompt = false

[push]
  default = current

[rebase]
  stat = true

[status]
  showUntrackedFiles = all

[user]
  name = Aymeric Beaumet
  email = aymeric@beaumet.me
  editor = vim
