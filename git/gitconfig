[advice]
  statusHints = false

[alias]
  ; Fast access aliases
  a = add
  aa = add --all
  br = branch
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  df = diff
  dfc = diff --cached
  fe = fetch
  l = log --show-signature
  me = merge --no-ff
  pl = pull
  ps = push
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rmc = rm --cached
  rs = reset
  rsh = reset --hard
  sh = stash
  sha = stash apply
  shd = stash drop
  shl = stash list
  shp = stash pop
  shs = stash save
  st = status --short --branch
  sw = show --show-signature

  ; Show git aliases
  alias = "!git config -l | grep alias | cut -c 7- | sort"

  ; Delete all the untracked files
  dump = clean -ffdx ; suffix with `-n` to see which files would be deleted

  ; Find a file in the project
  find = "!git ls-files | grep -i"

  ; Print a tree of the project
  tree = log --oneline --graph --decorate

  ; Print all the committers for the project
  who = shortlog -sne

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showbranch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less

[diff]
  tool = vimdiff
  mnemonicprefix = true

[grep]
  lineNumber = true
  patternType = extended

[man]
  viewer = less

[push]
  default = nothing

