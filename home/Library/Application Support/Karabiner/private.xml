<?xml version="1.0"?>
<root>

  <item>

    <name>[Custom] Modifiers</name>

    <item>
      <identifier>remap.modifiers.pc_application_to_control_escape</identifier>
      <name>PC Application to control / escape</name>
      <autogen>
        __KeyOverlaidModifier__ KeyCode::PC_APPLICATION,
        KeyCode::VK_LAZY_CONTROL_L,
        KeyCode::ESCAPE,
      </autogen>
    </item>

    <item>
      <identifier>remap.modifiers.return_to_control_return</identifier>
      <name>Return to control / return</name>
      <autogen>
        __KeyOverlaidModifier__ KeyCode::RETURN,
        KeyCode::VK_LAZY_CONTROL_R,
        KeyCode::RETURN,
      </autogen>
    </item>

    <item>
      <identifier>remap.modifiers.tab_backslash_to_hyper_tab_backslash</identifier>
      <name>Tab, Backslash to Hyper / Tab, Backslash</name>
      <autogen>
        __KeyOverlaidModifier__ KeyCode::TAB, ModifierFlag::NONE,
        KeyCode::VK_MODIFIER_HYPER,
        KeyCode::TAB,
      </autogen>
      <autogen>
        __KeyOverlaidModifier__ KeyCode::BACKSLASH, ModifierFlag::NONE,
        KeyCode::VK_MODIFIER_HYPER,
        KeyCode::BACKSLASH,
      </autogen>
    </item>

  </item>

