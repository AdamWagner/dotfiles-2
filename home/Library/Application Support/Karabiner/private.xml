  <item>

    <name>[Custom] Emacs bindings</name>

    <appdef>
      <appname>MVIM</appname>
      <equal>org.vim.MacVim</equal>
    </appdef>

    <item>
      <identifier>remap.emacs.control_a</identifier>
      <name>Control + A: beginning of line (not mvim/terminal)</name>
      <not>MVIM, TERMINAL</not>
      <autogen>
        __KeyToKey__ KeyCode::A, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL | ModifierFlag::NONE,
        KeyCode::CURSOR_LEFT, ModifierFlag::COMMAND_L,
      </autogen>
    </item>

    <item>
      <identifier>remap.emacs.control_b</identifier>
      <name>Control + B: left (not mvim/terminal)</name>
      <not>MVIM, TERMINAL</not>
      <autogen>
        __KeyToKey__ KeyCode::B, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_CONTROL | ModifierFlag::NONE,
        KeyCode::CURSOR_LEFT,
      </autogen>
    </item>

    <item>
      <identifier>remap.emacs.alt_b</identifier>
      <name>Alt + B: one word backward (not mvim/terminal)</name>
      <not>MVIM, TERMINAL</not>
