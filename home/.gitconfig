[advice]
  statusHints = false

[alias]
  ; Fast access aliases
  a = add
  br = branch
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  df = diff
  dfc = diff --cached
  fe = fetch
  l = log
  pl = pull
  ps = push
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rmc = rm --cached
  rs = reset
  rsh = reset --hard
  sh = stash
  st = status --short --branch
  sw = show

  ; Show git aliases
  alias = "!git config -l | grep alias | cut -c 7- | sort"

  ; Print a tree of the project branches
  tree = log --oneline --graph --decorate

  ; Execute `git status -sb` every time a file in the directory change
  ; Rely on: https://github.com/emcrisostomo/fswatch
  watch = "!fswatch -o -e .git . | while read event ; do clear && echo \"$event file(s) changed - $(date)\" && git status -sb ; done"

  ; Print all the commiters for the project
  who = shortlog -sne

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showbranch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less -R

[diff]
  tool = vimdiff
  mnemonicprefix = true

[grep]
  lineNumber = true
  patternType = extended

[man]
  viewer = less

[push]
  default = nothing

