[advice]
  statusHints = false

[alias]
  ; Fast access aliases
  a = add
  br = branch
  ci = commit
  cia = commit --amend
  cl = clone
  co = checkout
  df = diff
  dfc = diff --cached
  fe = fetch
  l = log
  pl = pull
  ps = push
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rmc = rm --cached
  rs = reset
  rsh = reset --hard
  sh = stash
  st = status --short --branch
  sw = show

  ; Show git aliases
  alias = "!git config -l | grep alias | cut -c 7- | sort"

  ; Drop modifications on current branch, get the latest updates from the origin
  ; remote (prune unneeded remote branches references), merge them into master,
  ; delete useless local branches
  master = "!set -ex \
          && git reset --hard \
          && git fetch --prune origin \
          && git rebase origin/master master \
          && git branch --delete -- $(git branch | grep -v '^* master$')"

  ; Print a tree of the project branches
  tree = log --oneline --graph --decorate

  ; Print all the commiters for the project
  who = shortlog -sne

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showbranch = auto
  status = auto
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less -R

[diff]
  tool = vimdiff
  mnemonicprefix = true

[grep]
  lineNumber = true
  patternType = extended

[man]
  viewer = less

[push]
  default = nothing

